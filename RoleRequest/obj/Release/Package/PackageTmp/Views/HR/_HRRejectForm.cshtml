@model RoleRequest.Models.HRUserRejectModel

@using (Html.BeginForm("UserHRRejectForm", "HR", FormMethod.Post, new { @id = "hrUserRejectForm", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EnrollUserID)
    @Html.HiddenFor(m => m.DepartmentId)
    @Html.HiddenFor(m => m.BranchLocationId)
    @Html.HiddenFor(m => m.CorpTitleId)
    @Html.HiddenFor(m => m.FunctionalTitle)
    @Html.HiddenFor(m => m.SupervisionBy)
    <div class="card">
        <div class="card-header">
            <label>
                Details</label></div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Full Name::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.FullName)</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        Department::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.DepartmentName)</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Branch::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.BranchLocationName)</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        Corporate Title::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.CorpTitleName)</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Functional Title::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.FunctionalTitle)</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        Mobile Number::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.MobileNumber)</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Reporting Date::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        @Html.DisplayFor(m => m.JoinDate)</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        Remarks::</label>
                </div>
                <div class="form-group col-md-3">
                    @Html.TextAreaFor(m => m.Remarks, new { @placeholder = "Remarks", @rows = "2", @class = "form-control validated-control", @required = string.Empty })
                    <span class="field-validation-error text-danger" handle="Remarks"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-sbl-yellow float-right btn-submission">
                Submit</button>
        </div>
    </div>
}
<script src="../../Scripts/ViewsScript/hrForm.js" type="text/javascript"></script>