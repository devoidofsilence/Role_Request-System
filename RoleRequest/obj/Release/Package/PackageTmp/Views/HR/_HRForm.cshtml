@model RoleRequest.Models.HRUserModel

@using (Html.BeginForm("UserHRDetailForm", "HR", FormMethod.Post, new { @id = "hrUserForm", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EnrollUserID)
    @Html.HiddenFor(m => m.DepartmentId)
    @Html.HiddenFor(m => m.BranchLocationId)
    @Html.HiddenFor(m => m.CorpTitleId)
    @Html.HiddenFor(m => m.FunctionalTitle)
    <div class="card">
        <div class="card-header">
            <label>
                Details</label></div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Full Name::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.FullName)</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        Department::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.DepartmentName)</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Branch::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.BranchLocationName)</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        Corporate Title::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.CorpTitleName)</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Functional Title::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.FunctionalTitle)</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        Mobile Number::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>@Html.DisplayFor(m => m.MobileNumber)</label>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Reporting Date::</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        @Html.DisplayFor(m => m.JoinDate)</label>
                </div>
                <div class="form-group col-md-3">
                    <label>
                        Employee ID::</label>
                </div>
                <div class="form-group col-md-3">
                    @Html.TextBoxFor(m => m.EmployeeID, new { @placeholder = "Employee ID", @class = "form-control validated-control" })
                    <span class="field-validation-error text-danger" handle="EmployeeID"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label>
                        Password::</label>
                </div>
                <div class="form-group col-md-3">
                    @Html.TextBoxFor(m => m.EmployeeIDPwd, new { @placeholder = "Password", @class = "form-control validated-control", @type = "password" })
                    <span class="field-validation-error text-danger" handle="EmployeeIDPwd"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-sbl-yellow float-right btn-submission">
                Submit</button>
        </div>
    </div>
}
<script src="../../Scripts/ViewsScript/hrForm.js" type="text/javascript"></script>